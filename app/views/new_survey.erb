<h2>Create your new Survey about beards here</h2>

<div class="container">
  <!-- Button trigger modal -->
  <div id="show-modal-btn">
    <a data-toggle="modal" href="#myModal" class="btn btn-primary btn-lg">Name Your New Survey</a>
  </div>
  <br>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">New Survey Name</h4>
          </div>
          <div class="modal-body">

            <input id="title-input" type="text" class="form-control" name="survey_title" placeholder="Name of Survey" autofocus>
          
          </div>
        <div class="modal-footer">
          <button type="button" id="survey-name-modal" class="btn btn-default" data-dismiss="modal">Proceed</button>
          <!-- <button type="button" id="submit-survey-title" class="btn btn-primary">Save changes</button> -->
          
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  
  <form class="new-survey" action="/surveys/new" method="post">
    <div class='new-survey-title'>
      <h3></h3>
    </div>
    <input id="hidden-survey-title" type="hidden" name="title" value=""><br>
   <div class="question">
    <span>Question: <input class="form-control" type="text" name="question[1][:content]" placeholder="Enter question here" autofocus></span><br>
  </div>
  <div class="choice">
    <span>Choice: <input type="text" name="question[1][:reply][:1]" placeholder="Choice"></span><br>
  </div>
  <div class="choice">
    <span>Choice: <input type="text" name="question[1][:reply][:2]" placeholder="Choice"></span>
  </div>

  <div class="add-survey-content"></div>
  
    <br>
  </div>
  
  <div><input type="submit" value="Done"></div>
<!--   <input id="choice-counter" type="hidden" value="2">-->
</form>

<form class="add-choice" action="/surveys/new/choices/new" method="get">
  <input class="btn-add-choice" type='submit' value='Add Choice'>
</form>

<form class="add-question" action="/surveys/new/questions/new" method="get">
  <input class="btn-next-question" type='submit' value='Add New Question' >
</form>
